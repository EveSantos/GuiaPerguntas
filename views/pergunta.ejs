<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>    
    
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda a pergunta</h3>
            <label for="">Resposta:</label>
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            <div class="d-flex justify-content-between botoes">
                <button class="btn btn-primary">Responder</button>
                <a href="/" class="btn btn-primary">Voltar </a>
            </div>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>     
            <div class="card mt-3">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <%}) %>
    </div>

</body>
<%- include ('partials/footer.ejs') %>
